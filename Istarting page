def picnicData(Itemsdata, lstript, rstrip):
    print('PICNIC ITEMS'.center(leftWidth + rightWidth, '='))
    for k, v in Itemsdata.items():
        print(k.ljust(lstript, '+') + str(v).rjust(rightWidth))
picnicItems = {'sandwitches':4, 'apples':12, 'cups':4}
picnicData(picnicItems, 20, 5)
picnicData(picnicItems, 12, 5)
